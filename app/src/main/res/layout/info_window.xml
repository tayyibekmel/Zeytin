<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/corner"
    android:paddingBottom="10dp"
    android:paddingEnd="20dp"
    android:orientation="horizontal"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="34ZYT86"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.923" />

        <ImageView
            android:layout_marginStart="10dp"
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/zeytin_info_window"
             />


    </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingTop="15dp">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="10dp"
           >

           <ImageView
               android:id="@+id/infoWindowİcon_Ucret"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_money"
               app:layout_constraintEnd_toStartOf="@+id/textView3"
               tools:layout_editor_absoluteY="8dp" />

           <TextView
               android:id="@+id/infoWindowText_Ucret"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="86,86"
               android:textSize="15sp"
               tools:layout_editor_absoluteX="157dp"
               tools:layout_editor_absoluteY="12dp" />



       </LinearLayout>


       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="10dp"
           >

           <ImageView

               android:id="@+id/infoWindowİcon_Sarj"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_battery"
               app:layout_constraintEnd_toStartOf="@+id/textView3"
               tools:layout_editor_absoluteY="8dp" />

           <TextView
               android:id="@+id/infoWindowText_Sarj"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="%86"
               android:textSize="15sp"
               tools:layout_editor_absoluteX="157dp"
               tools:layout_editor_absoluteY="12dp" />



       </LinearLayout>



       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_margin="10dp"
           >

           <ImageView
               android:id="@+id/infoWindowİcon_Uzaklık"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_location"
               app:layout_constraintEnd_toStartOf="@+id/textView3"
               tools:layout_editor_absoluteY="8dp" />

           <TextView
               android:id="@+id/infowWindowText_Uzaklık"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="86,86"
               android:textSize="15sp"
               tools:layout_editor_absoluteX="157dp"
               tools:layout_editor_absoluteY="12dp" />



       </LinearLayout>



   </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:textColor="@color/white"
            android:background="@drawable/basla_button1"
            android:text="Zili Çal"
            android:textSize="20sp" />


    </LinearLayout>






</LinearLayout>